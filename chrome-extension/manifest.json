{
    "name": "GuessWhat frontend",
    "description": "Frontend for The Port hackathon at CERN 2016. More details to come.",
    "version": "1",
    "manifest_version": 2,
    "browser_action": {
      "default_title": "Guess what",
      "default_popup": "popup.html"
    },
    "content_scripts":
    [
        {
            "matches": ["*://*/*"],
            "js": ["reader.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "tabs", "<all_urls>", "storage"
    ],
    "icons": {
      "16": "icon16.png"
    }
}

